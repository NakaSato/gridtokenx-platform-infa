# Environment Variables Template
# Copy this file to .env and fill in your actual values

# PostgreSQL Configuration
POSTGRES_PASSWORD=changeme_secure_password

# JWT Secret for API Gateway
JWT_SECRET=your-very-secure-secret-key-change-this

# Rust Logging Level (debug, info, warn, error)
RUST_LOG=info

# Solana RPC URL
NEXT_PUBLIC_SOLANA_RPC_URL=https://api.devnet.solana.com
# For mainnet: https://api.mainnet-beta.solana.com

# API Gateway URL
NEXT_PUBLIC_API_URL=http://localhost:8080

# Pyth Price Service (for Trading Platform)
NEXT_PUBLIC_PYTH_PRICE_SERVICE_URL=https://hermes.pyth.network

# Kafka Configuration (Optional - for Smart Meter Simulator)
KAFKA_BOOTSTRAP_SERVERS=

# InfluxDB Configuration (Optional - for Smart Meter Simulator)
INFLUXDB_URL=
INFLUXDB_TOKEN=
INFLUXDB_ORG=
INFLUXDB_BUCKET=
