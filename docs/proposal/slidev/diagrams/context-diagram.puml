@startuml
!include <C4/C4_Context>
!include <tupadr3/font-awesome-5/user>
!include <tupadr3/font-awesome-5/server>
!include <tupadr3/font-awesome-5/coins>
!include <tupadr3/font-awesome-5/broadcast_tower>
!include <tupadr3/font-awesome-5/map>

skinparam defaultFontName "Helvetica Neue"

title **GridTokenX - System Context Diagram**\nHigh-Level Landscape

' Person
Person(user, "Prosumer", "Energy producer/consumer participating in the P2P energy market.", $sprite="user")

' The Software System
System(platform, "GridTokenX Platform", "Enables decentralized energy trading, meter telemetry ingestion, and token settlement.", $sprite="server")

' External Systems
System_Ext(solana, "Solana Network", "L1 Blockchain for atomic settlement and transparent state governance.", $sprite="coins")
System_Ext(pyth, "Pyth Network", "Provides real-time energy price feeds (Oracle).", $sprite="broadcast_tower")
System_Ext(mapbox, "Mapbox", "Provides geospatial data for grid topology visualization.", $sprite="map")

' Relationships
Rel(user, platform, "Views dashboards, manages wallet, and trades energy")
Rel(platform, solana, "Commits transactions & reads state")
Rel(platform, pyth, "Consumes price feeds")
Rel(platform, mapbox, "Fetches map tiles")

' Layout Hints
Lay_R(platform, solana)
Lay_U(platform, pyth)
Lay_U(platform, mapbox)
@enduml
